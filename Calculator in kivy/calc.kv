<MyLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width, root.height

        TextInput:
            id: calc_input
            text: "0"
            halign: "right"
            font_size:65
            size_hint: (1,.15)

        GridLayout:
            cols:4
            rows:5

            #row1
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"%"
                on_press: root.percent()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"C"
                on_press:root.clear()
            Button:
                id: clear
                size_hint:(.2,.2)
                font_size:32
                text:"<<"
                on_press:root.remove()
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"/"
                on_press: root.divide()

            #row2
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"7"
                on_press:root.button_press(7)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"8"
                on_press:root.button_press(8)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"9"
                on_press:root.button_press(9)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"x"
                on_press: root.multiply()

            #row3
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"4"
                on_press:root.button_press(4)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"5"
                on_press:root.button_press(5)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"6"
                on_press:root.button_press(6)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"-"
                on_press: root.subtract()

            #row4
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"1"
                on_press:root.button_press(1)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"2"
                on_press:root.button_press(2)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"3"
                on_press:root.button_press(3)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"+"
                on_press: root.add()

           #row5
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"+/-"
                on_press:root.pos_neg()
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"0"
                on_press:root.button_press(0)
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"."
                on_press: root.dot()
                background_color:(157/255,157/255,157/255,1)
            Button:
                size_hint:(.2,.2)
                font_size:32
                text:"="
                background_color:(157/255,157/255,157/255,1)
                on_press: root.equals()